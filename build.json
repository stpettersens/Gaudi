{
	"preamble": {
	
		"source": "helloworld.cpp",
		"target": "helloworld",
		"assembler": "gcc"
		"dependOn": "file.txt <-http://www.domain.xyz/somefile/file.zip"
	}

	"build": [

		{ "exec": "$assembler $source -o $target" },
		{ "mkdir": "bin" },
		{ "copy": "$target->bin" }
	]
	
	"install": [
		
		{ "copy": "$target->$installDir" }
	]
	
	"clean": [

		{ "erase": "*.c" } 
	]
}
