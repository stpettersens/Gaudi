{
	"preamble": {

		"source": "helloworld.cpp",
		"target": "helloworld",
		"tool": "gcc"
	}

	"build": [

		{ "exec": "$tool $source -o $target" },
		{ "mkdir": "bin" },
		{ "copy": "$target->bin" }
	]
	
	"install": [
		
		{ "copy": "$target->$installDir" }
	]
	
	"clean": [

		{ "delete": "*.c" } 
	]
}
