{
	"preamble": {

		"target": "Gaudi.jar",
		"source": "src/*.scala",
		"compiler": "scalac"
	},

	"build" [

		{ "echo": "Naturally, Gaudi can build itself." },	
		{ "echo": "Compiling..." },
		{ "exec": "scalac -d bin -sourcepath src/org/stpettersens/gaudi *.scala" },
		{ "echo": "Packaging..." },
		{ "exec": "jar cfm Gaudi.jar Manifest.mf -C bin/ ." },
		{ "echo": "Done." }
	]

	"clean" [
		{ "echo": "Removing classes..." }
		
	]
}
