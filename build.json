{
	"preamble": {

		"target": "Gaudi.jar",
		"source": "src/*.scala",
		"compiler": "scalac"
	},

	"build" [

		{ "echo": "Naturally, Gaudi can build itself." },	
		{ "echo": "Need to change Gaudi to assume .BATs, .CMDs, .SHs" },
		{ "echo": "Compiling..." },
		{ "exec": "scalac -d bin -deprecation -unchecked src/*.scala" },
		{ "echo": "Packaging..." },
		{ "exec": "jar cfm Gaudi.jar Manifest.mf -C bin/ ." },
		{ "echo": "Done." }
	]

	"clean" [
		
		{ "echo": "todo" }
	]
}
