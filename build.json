{
	"preamble": {

		"target": "Gaudi.jar",
		"source": "src/*.scala",
		"compiler": "scalac"
	},

	"build" [

		{ "echo": "Naturally, Gaudi can build itself" },	
		{ "echo": "Need to change Gaudi to assume .BATs, .CMDs, .SHs" },
		{ "echo": "Compiling..." },
		{ "exec": "scalac.bat -d bin -deprecation -unchecked src/*.scala" },
		{ "echo": "Packaging..." },
		{ "cp": "Manifest.mf->bin/Manifest.mf" },
		{ "exec": "jar -cfm Gaudi.jar bin/Manifest.mf bin/*" },
		{ "echo": "Done." }
	]
}
