{
	"preamble": {
	
		"source": "helloworld.cpp",
		"target": "helloworld",
		"assembler": "gcc"
	}

	"build": [

		{ "exec": "$assembler $source -o $target" },
		{ "mkdir": "bin" },
		{ "copy": "$target->bin" }
	]
	
	"install": [
		
		{ "copy": "$target->$installDir" }
	]
	
	"clean": [

		{ "erase": "*.c" } 
	]
}
